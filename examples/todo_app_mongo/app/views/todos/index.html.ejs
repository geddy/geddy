<div class="hero-unit">
  <h2>To Do List</h2>
  <%- linkTo('Create a new To Do', { controller: 'todos', action: 'add' }, {class: 'btn pull-right'}) %>
</div>
<% if (todos && todos.length) { %>
  <% for (var i in todos) { %>
  <div class="row todo-item">
    <div class="span8">
        <h3><%- linkTo(todos[i].title, { controller: 'todos', id: todos[i].id, action: 'edit' }) %></h3>
    </div>
    <div class="span4"><h3><i class="icon-list-alt"></i><%= todos[i].status; %></h3></div>
  </div>
  <% } %>
<% } %>
