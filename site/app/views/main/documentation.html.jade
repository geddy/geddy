#documentation
  .row.title
    .span12
      h2 Framework documentation
  .row.content
    .span6.toc
      ul
        each doc in docs
          li
            a(href="#"+doc.name)=doc.name
            if doc.subs
              ul
                each sub in doc.subs
                  li
                    a(href="#"+doc.name+sub)=sub
    .span6
      each doc in docs
        h3(id=doc.name)=nails.string.capitalize(doc.name)
        !=doc.content
