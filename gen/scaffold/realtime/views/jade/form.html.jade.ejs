<% for(var i in properties) { -%>
<% if(properties[i].name && properties[i].name !== 'id') { -%>
.form-group
  label(for="<%= properties[i].name %>", class="control-label col-xs-2") <%= properties[i].name %>
  .controls col-xs-6
<% if(properties[i].type === 'string') { -%>
<% if(properties[i].name === 'password') { -%>
    != contentTag('input', '', {type:'password', class:'form-control', name:'<%= properties[i].name %>'})
<% } else { -%>
    != contentTag('input', <%= names.property.singular %>.<%= properties[i].name %>, {type:'text', class:'form-control', name:'<%= properties[i].name %>'})
<% } -%>
<% } else if(properties[i].type === 'text') { -%>
    != contentTag('textarea', <%= names.property.singular %>.<%= properties[i].name %>, {class: 'form-control', name: '<%= properties[i].name %>', rows: 10})
<% } else if(properties[i].type === 'int') { -%>
    != contentTag('input', <%= names.property.singular %>.<%= properties[i].name %>, {type:'number', class:'form-control', name:'<%= properties[i].name %>'})
<% } else if(properties[i].type === 'number') { -%>
    != contentTag('input', <%= names.property.singular %>.<%= properties[i].name %>, {type:'number', step:'any', class:'form-control', name:'<%= properties[i].name %>'})
<% } else if(properties[i].type === 'boolean') { -%>
    select.span1(name="<%= properties[i].name %>")
      if <%= names.property.singular %>.<%= properties[i].name %>
        option false
        option(selected) true
      else
        option(selected) false
        option true
<% } else if(properties[i].type === 'datetime') {  -%>
    != contentTag('input', <%= names.property.singular %>.<%= properties[i].name %>, {type:'datetime', class:'col-md-3', name:'<%= properties[i].name %>'})
<% } else if(properties[i].type === 'date') { -%>
    != contentTag('input', <%= names.property.singular %>.<%= properties[i].name %>, {type:'date', class:'col-md-2', name:'<%= properties[i].name %>'})
<% } else { -%>
    | <%= properties[i].type %>
<% } -%>
<% } -%>
<% } -%>
